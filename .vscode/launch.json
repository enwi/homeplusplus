  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/backend/bin/HomePlusPlus",
      "args": [
        "-debug",
        "-logDir",
        "${workspaceFolder}/backend/bin/log",
        "-dir",
        "${workspaceFolder}/resources",
        "-cLogL",
        "0",
        "-logL",
        "0"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "lldb"
    },
    {
      "name": "Debug Tests",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/backend/bin/test/HomePlusPlus_Test",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "lldb"
    }
  ]
}